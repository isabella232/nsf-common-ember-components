<div class="row">
    <div class="col-xs-6">
        <div class="card">
            <h4 class="card-header">Selection Tree</h4>
            <div class="card-block" style="height: 300px; overflow-y: scroll;">
                {{tree-view data=treeData onLeafClick=(action 'leafClick') onBranchToggle=(action 'branchToggle') onNodeFocusIn=(action 'nodeFocusIn') onNodeFocusOut=(action 'nodeFocusOut')}}
            </div>
        </div>
    </div>

    <div class="col-xs-6">
        <div class="card">
            <h4 class="card-header">Actions</h4>
            <div class="card-block" style="height: 300px; overflow-y: scroll;">
                <ul>
                    {{#each actionLog as |item|}}
                        <li>{{{item}}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

