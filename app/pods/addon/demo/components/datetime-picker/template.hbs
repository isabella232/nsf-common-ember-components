<div class="row">
    <div class="col-xs-4">
        <p>Have some time on your mind?</p>
        {{datetime-picker
            format=format.picker
            extraFormats=extraFormats.picker
            dayViewHeaderFormat=dayViewHeaderFormat.picker
            useStrict=useStrict.picker
            defaultDate=defaultDate.picker
            useCurrent=useCurrent.picker
            viewDate=viewDate.picker
            minDate=minDate.picker
            maxDate=maxDate.picker
            daysOfWeekDisabled=daysOfWeekDisabled.picker
            enabledDates=enabledDates.picker
            disabledDates=disabledDates.picker
            enabledHours=enabledHours.picker
            disabledHours=disabledHours.picker
            viewMode=viewMode.picker
            toolbarPlacement=toolbarPlacement.picker
            stepping=stepping.picker
            collapse=collapse.picker
            calendarWeeks=calendarWeeks.picker
            showTodayButton=showTodayButton.picker
            showClose=showClose.picker
            showClear=showClear.picker
            sideBySide=sideBySide.picker
            keepOpen=keepOpen.picker
            inline=inline.picker
            keepInvalid=keepInvalid.picker
            debug=debug.picker
            ignoreReadonly=ignoreReadonly.picker
            allowInputToggle=allowInputToggle.picker
            focusOnShow=focusOnShow.picker
            iconCalendar=iconCalendar.picker
            iconTime=iconTime.picker
            iconDate=iconDate.picker
            iconUp=iconUp.picker
            iconDown=iconDown.picker
            iconPrevious=iconPrevious.picker
            iconNext=iconNext.picker
            iconToday=iconToday.picker
            iconClear=iconClear.picker
            iconClose=iconClose.picker
            tooltipToday=tooltipToday.picker
            tooltipClose=tooltipClose.picker
            tooltipClear=tooltipClear.picker
            tooltipSelectMonth=tooltipSelectMonth.picker
            tooltipPrevMonth=tooltipPrevMonth.picker
            tooltipNextMonth=tooltipNextMonth.picker
            tooltipSelectYear=tooltipSelectYear.picker
            tooltipPrevYear=tooltipPrevYear.picker
            tooltipNextYear=tooltipNextYear.picker
            tooltipSelectDecade=tooltipSelectDecade.picker
            tooltipPrevDecade=tooltipPrevDecade.picker
            tooltipNextDecade=tooltipNextDecade.picker
            tooltipSelectCentury=tooltipSelectCentury.picker
            tooltipPrevCentury=tooltipPrevCentury.picker
            tooltipNextCentury=tooltipNextCentury.picker}}
    </div>

    <div class="col-xs-8">
        {{#collapse-pane class="card" open=false as |isOpen|}}
            <div class="card-header">
                <h4 class="mb-0 float-xs-left">Input/Output Formats</h4>
                {{collapse-pane-toggle class="btn btn-primary btn-sm float-xs-right" text=(if isOpen 'Show Less' 'Show More')}}
            </div>
            {{#collapse-pane-body class="card-block"}}
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Output Format</label>
                        <div class="col-sm-7">
                            {{input type="text" value=format.field class="form-control"}}
                            <span><code>{{format.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Alternate Input Formats <small class="text-muted">One per line</small></label>
                        <div class="col-sm-7">
                            {{textarea value=extraFormats.field rows=1 class="form-control"}}
                            <span><code>{{extraFormats.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Day View Header Format</label>
                        <div class="col-sm-7">
                            {{input type="text" value=dayViewHeaderFormat.field class="form-control"}}
                            <span><code>{{dayViewHeaderFormat.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Use Strict Formatting</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=useStrict.field}} <span><code>{{useStrict.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Default Date</label>
                        <div class="col-sm-7">
                            {{datetime-picker useCurrent=false onChange=(action 'onDefaultDateChange')}}
                            <span><code>{{defaultDate.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Use Current Date <small class="text-muted">Or limit to day, month, etc.</small></label>
                        <div class="col-sm-7">
                            <select class="form-control" onchange={{action (mut useCurrent.field) value='target.value'}}>
                                <option value="true" selected>Yes</option>
                                <option value="false">No</option>
                                <option value="year">Year</option>
                                <option value="month">Month</option>
                                <option value="day">Day</option>
                                <option value="hour">Hour</option>
                                <option value="minute">Minute</option>
                            </select>
                            <span><code>{{useCurrent.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">View Date</label>
                        <div class="col-sm-7">
                            {{datetime-picker useCurrent=false onChange=(action 'onViewDateChange')}}
                            <span><code>{{viewDate.pretty}}</code></span>
                        </div>
                    </div>
                </form>
            {{/collapse-pane-body}}
        {{/collapse-pane}}


        {{#collapse-pane class="card" open=false as |isOpen|}}
            <div class="card-header">
                <h4 class="mb-0 float-xs-left">Allow/Disable Selections</h4>
                {{collapse-pane-toggle class="btn btn-primary btn-sm float-xs-right" text=(if isOpen 'Show Less' 'Show More')}}
            </div>
            {{#collapse-pane-body class="card-block"}}
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Disable all on and before</label>
                        <div class="col-sm-7">
                            {{datetime-picker useCurrent=false onChange=(action 'onMinDateChange')}}
                            <span><code>{{minDate.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Disable all on and after</label>
                        <div class="col-sm-7">
                            {{datetime-picker useCurrent=false onChange=(action 'onMaxDateChange')}}
                            <span><code>{{maxDate.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Disabled Dates <small class="text-muted">One per line</small></label>
                        <div class="col-sm-7">
                            {{textarea value=disabledDates.field rows=1 class="form-control"}}
                            <span><code>{{disabledDates.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Enabled Dates <small class="text-muted">One per line</small></label>
                        <div class="col-sm-7">
                            {{textarea value=enabledDates.field rows=1 class="form-control"}}
                            <span><code>{{enabledDates.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Disabled Hours <small class="text-muted">One per line</small></label>
                        <div class="col-sm-7">
                            {{textarea value=disabledHours.field rows=1 class="form-control"}}
                            <span><code>{{disabledHours.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Enabled Hours <small class="text-muted">One per line</small></label>
                        <div class="col-sm-7">

                            {{textarea value=enabledHours.field rows=1 class="form-control"}}
                            <span><code>{{enabledHours.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Days of week disabled</label>
                        <div class="col-sm-7">
                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.sunday}} Sunday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.monday}} Monday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.tuesday}} Tuesday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.wednesday}} Wednesday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.thursday}} Thursday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.friday}} Friday
                            </label>

                            <label class="form-check-inline">
                                {{input type="checkbox" class="form-check-input" checked=daysOfWeekDisabled.field.saturday}} Saturday
                            </label>

                            <br />
                            <span><code>{{daysOfWeekDisabled.pretty}}</code></span>
                        </div>
                    </div>
                </form>
            {{/collapse-pane-body}}
        {{/collapse-pane}}


        {{#collapse-pane class="card" open=false as |isOpen|}}
