                                <option value="months">Months</option>
                                <option value="years">Years</option>
                                <option value="decades">Decades</option>
                            </select>
                            <span><code>{{viewMode.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Toolbar Placement</label>
                        <div class="col-sm-7">
                            <select class="form-control" onchange={{action (mut toolbarPlacement.field) value='target.value'}}>
                                <option value="default" selected>Default</option>
                                <option value="top">Top</option>
                                <option value="bottom">Bottom</option>
                            </select>
                            <span><code>{{toolbarPlacement.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Minutes Stepping</label>
                        <div class="col-sm-7">
                            {{input type="number" value=stepping.field step=1 min=1 max=60 class="form-control"}}
                            <span><code>{{stepping.pretty}}</code></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Use Collapse Effect</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=collapse.field}} <span><code>{{collapse.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Show Calendar Weeks</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=calendarWeeks.field}} <span><code>{{calendarWeeks.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Show Today Button</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=showTodayButton.field}} <span><code>{{showTodayButton.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Show Close Button</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=showClose.field}} <span><code>{{showClose.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Show Clear Button</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=showClear.field}} <span><code>{{showClear.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Show Side by Side</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=sideBySide.field}} <span><code>{{sideBySide.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Keep Open</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=keepOpen.field}} <span><code>{{keepOpen.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Display Inline</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=inline.field}} <span><code>{{inline.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Keep Invalid Entries</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=keepInvalid.field}} <span><code>{{keepInvalid.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Debug <small class="text-muted">Picker will stay open after blur</small></label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=debug.field}} <span><code>{{debug.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Ignore Readonly</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=ignoreReadonly.field}} <span><code>{{ignoreReadonly.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Allow Input Toggle</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=allowInputToggle.field}} <span><code>{{allowInputToggle.pretty}}</code></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-5 col-form-label">Focus on Show</label>
                        <div class="col-sm-7">
                            <label class="form-check">
                                {{input type="checkbox" checked=focusOnShow.field}} <span><code>{{focusOnShow.pretty}}</code></span>
                            </label>
                        </div>
                    </div>
                </form>
            {{/collapse-pane-body}}
        {{/collapse-pane}}


